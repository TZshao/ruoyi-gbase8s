<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hfits.system.workflow.mapper.FlowActionMapper">

    <resultMap type="com.hfits.system.workflow.domain.FlowAction" id="FlowActionResult">
        <id     property="id"          column="id"/>
        <result property="instanceId"  column="instance_id"/>
        <result property="stepCode"    column="step_code"/>
        <result property="pass"      column="pass"/>
        <result property="comment"     column="comment"/>
        <result property="operatorId"  column="operator_id"/>
        <result property="actionTime"  column="action_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, instance_id, step_code, pass, comment, operator_id, action_time
    </sql>

    <select id="selectFlowActionById" parameterType="Long" resultMap="FlowActionResult">
        select <include refid="Base_Column_List"/> from flow_action where id = #{id}
    </select>

    <select id="selectFlowActionList" parameterType="FlowAction" resultMap="FlowActionResult">
        select <include refid="Base_Column_List"/> from flow_action
        <where>
            <if test="instanceId != null">
                and instance_id = #{instanceId}
            </if>
            <if test="pass != null and pass">
                and pass
            </if>
            <if test="pass != null and !pass">
                and not pass
            </if>
        </where>
        order by id desc
    </select>

    <select id="selectByInstanceId" parameterType="Long" resultMap="FlowActionResult">
        select <include refid="Base_Column_List"/> from flow_action where instance_id = #{instanceId} order by id desc
    </select>

    <insert id="insertFlowAction" parameterType="FlowAction" useGeneratedKeys="true" keyProperty="id">
        insert into flow_action(
            <trim suffixOverrides=",">
                <if test="instanceId != null">instance_id,</if>
                <if test="stepCode != null">step_code,</if>
                <if test="pass != null">pass,</if>
                <if test="comment != null">comment,</if>
                <if test="operatorId != null">operator_id,</if>
                <if test="actionTime != null">action_time,</if>
            </trim>
        ) values(
            <trim suffixOverrides=",">
                <if test="instanceId != null">#{instanceId},</if>
                <if test="stepCode != null">#{stepCode},</if>
                <if test="pass != null">#{pass},</if>
                <if test="comment != null">#{comment},</if>
                <if test="operatorId != null">#{operatorId},</if>
                <if test="actionTime != null">#{actionTime},</if>
            </trim>
        )
    </insert>

    <delete id="deleteFlowActionById" parameterType="Long">
        delete from flow_action where id = #{id}
    </delete>

    <delete id="deleteFlowActionByIds" parameterType="Long">
        delete from flow_action where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>

